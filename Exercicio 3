  </form>
  <h1>Atualizar livro</h1>
  <form action="http://localhost:8080/update" method="POST">
    <input type="number" name="id"> <br />
    <input type="text" placeholder="Autor" name="autor"> <br />
    <input type="text" placeholder="Nome" name="nome"> <br />
    <input type="date" name="dataPublicacao"> <br />
    <input type="text" placeholder="ISBN" name="isbn"> <br />
    <input type="submit" value="Update">
  </form>
  <h1>Remover livro</h1>
  <form action="http://localhost:8080/delete" method="POST">
    <input type="number" name="id"> <br />
    <input type="submit" value="Deletar">
  </form>
